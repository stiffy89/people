{
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^3.7.0",
    "@sap/cds": "^7",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/ux-specification": "^1.108.16"
  },
  "scripts": {
    "watch-peopleapp": "cds watch --open peopleapp/webapp/index.html?sap-ui-xx-viewCache=false",
    "backend": "cds watch --port 4001 --profile devdestination"
  },
  "cds": {
    "requires": {
        "z_crud_tst_srv": {
            "kind": "odata-v2",
            "model": "srv/external/z_crud_tst_srv",
            "csrf": true,
            "csrfInBatch": true,
            "[devdestination]": {
                "credentials": {
                    "destination": "dest_ecc_people"
                }
            }
        },
        "[production]": {
            "auth": "xsuaa"
        }
    }
  },
  "sapux": [
    "app/peopleapp"
  ]
}
